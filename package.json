    "@types/react": "^19.2.2",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "resolutions": {
    "next": "$next"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "core-js",
      "sharp",
      "unrs-resolver"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-css-order",
      "@softonus/prettier-plugin-duplicate-remover"
    ]
  },
  "lint-staged": {
    "*.{html,md,less,json,yml,js,mjs,ts,tsx}": "prettier --write",
    "*.{js,mjs,ts,tsx}": "eslint --fix"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix  &&  git add .  &&  tsc --noEmit",
    "test": "lint-staged  &&  npm run lint",
    "pack-image": "docker build -t freecodecamp-chengdu/freecodecamp-chengdu.github.io:latest .",
    "container": "docker rm -f freecodecamp-chengdu.github.io  &&  docker run --name freecodecamp-chengdu.github.io -p 3000:3000 -d freecodecamp-chengdu/freecodecamp-chengdu.github.io:latest"
  }
}
