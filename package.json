    "lodash": "^4.17.21",
    "marked": "^16.4.0",
    "mime": "^4.1.0",
    "mobx": "^6.15.0",
    "mobx-github": "^0.6.0",
    "mobx-i18n": "^0.7.2",
    "mobx-lark": "^2.4.2",
